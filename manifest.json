{
	"name": "ASANA Translate",
	"description": "Because we want ASANA in our language",
	"version": "0.7",
	"manifest_version": 2,
	"default_locale": "en",
	"permissions": [
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"*://app.asana.com/*"
	],
	"content_scripts": [{
		"matches": ["*://app.asana.com/*"],
		"js": ["assets/js/mootools-core-1.4.5.js", "assets/js/translate.js"]
    }],
    "background": {
    	"scripts": ["assets/js/background.js"]
    },
    "icons": {
		"128": "assets/images/icon_128.png",
		"48": "assets/images/icon_48.png"
	}
}
